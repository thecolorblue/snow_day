{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn", // Use the uvicorn module
            "args": [
                "src.main:app", // Specify the app location
                "--reload"      // Add the reload flag
            ],
            "jinja": true, // Enable Jinja templating debugging if needed
            "cwd": "${workspaceFolder}" // Ensure it runs from the project root
        },
        {
            "name": "Next.js: npm run dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/nextjs-app",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        }
    ]
}